{
  "name": "hardware-compiler",
  "version": "0.0.1",
  "description": "Write JavaScript software for your hardware.",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "bin": {
    "hardware.js": "./bin/compile"
  },
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "tmp": "0.0.33",
    "typescript": "2.1.6",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "prettier": "^1.11.1",
    "remap-istanbul": "^0.6.4",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-plugin-prettier": "^1.3.0"
  },
  "scripts": {
    "format": "prettier --write 'packages/**/*.ts'",
    "lint": "tslint -c tslint.json 'packages/**/*.ts'",
    "prepare": "tsc -p tsconfig.build.json",
    "test": "cd tests && make -B all",
    "test-run-single": "bash -c 'gcc tests/${1}.c -ansi -pedantic -Wall -g -o  tests/${1}.elf && ./tests/${1}.elf' -- ",
    "test-single": "lerna run prepare && bash -c './bin/compile tests/${1}.ts && gcc tests/${1}.c -ansi -pedantic -Wall -g -o  tests/${1}.elf && ./tests/${1}.elf' -- "
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/brunobasto/hardware.js.git"
  },
  "author": "Bruno Basto",
  "license": "ISC"
}
