{
  "name": "nativejs-compiler",
  "version": "1.0.3",
  "description": "Write JavaScript software for your hardware.",
  "main": "src/index.js",
  "typings": "src/index.d.ts",
  "bin": {
    "hardware.js": "./bin/compile"
  },
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "mocha": "^5.1.0",
    "nativejs-standard-preset": "^0.3.0",
    "nyc": "^11.6.0",
    "source-map-support": "^0.5.4",
    "tmp": "0.0.33",
    "typescript": "2.1.6",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "prettier": "^1.11.1",
    "remap-istanbul": "^0.6.4",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-plugin-prettier": "^1.3.0"
  },
  "scripts": {
    "format": "yarn --cwd ../../ format",
    "lint": "yarn --cwd ../../ lint",
    "prepare": "yarn --cwd ../../ prepare",
    "test": "nyc mocha --opts tests/mocha.opts",
    "test-legacy": "cd tests && make -B all"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/"
    ],
    "exclude": [
      "src/util"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/brunobasto/hardware.js.git"
  },
  "author": "Bruno Basto",
  "license": "ISC"
}
