{
  "name": "hardwarejs",
  "version": "0.0.3",
  "description": "Write JavaScript software for your hardware.",
  "private": true,
  "devDependencies": {
    "lerna": "^2.10.1",
    "prettier": "^1.11.1",
    "remap-istanbul": "^0.6.4",
    "rimraf": "^2.6.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-plugin-prettier": "^1.3.0",
    "yarn": "^1.5.1"
  },
  "scripts": {
    "clean": "rimraf packages/**/lib packages/**/node_modules",
    "bootstrap": "lerna bootstrap",
    "prepare": "tsc -p tsconfig.base.json",
    "format": "prettier --write './packages/**/*.ts'",
    "lint": "tslint -c tslint.json './packages/**/*.ts'",
    "test": "lerna run test"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/brunobasto/hardware.js.git"
  },
  "author": "Bruno Basto",
