{
  "name": "hardware.js",
  "version": "0.0.1",
  "description": "Write JavaScript software for your hardware.",
  "main": "hjs.js",
  "bin": {
    "hjs": "./bin/compile"
  },
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "typescript": "2.1.6",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "prettier": "^1.11.1",
    "remap-istanbul": "^0.6.4",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-plugin-prettier": "^1.3.0"
  },
  "scripts": {
    "build": "tsc",
    "clean": "cd tests && make clean",
    "cover": "cd tests && make -B cover",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "prepublish": "tsc",
    "test": "npm run build && cd tests && make -B all",
    "test-run-single": "bash -c 'gcc tests/${1}.c -ansi -pedantic -Wall -g -o  tests/${1}.elf && ./tests/${1}.elf' -- ",
    "test-single": "npm run build && bash -c './bin/hjs tests/${1}.ts && gcc tests/${1}.c -ansi -pedantic -Wall -g -o  tests/${1}.elf && ./tests/${1}.elf' -- "
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/brunobasto/hardware.js.git"
  },
  "author": "Bruno Basto",
  "license": "ISC"
}
